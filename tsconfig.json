{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"],
      "@core/*": ["app/core/*"],
      "@features/*": ["app/features/*"],
      "@shared/*": ["app/shared/*"],
      "@flexyear-modules/*": ["app/modules/*"],
      "@assets/*": ["assets/*"],
      "@config/*": ["config/*"],
      "simpliflysaas-data-table": ["dist/simpliflysaas-data-table"],
      "simpliflysaas-data-table/*": ["dist/simpliflysaas-data-table/*"],
      "nepali-datepicker": ["dist/nepali-datepicker"],
      "nepali-datepicker/*": ["dist/nepali-datepicker/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "lib": ["es2018", "dom"]
  }
}
